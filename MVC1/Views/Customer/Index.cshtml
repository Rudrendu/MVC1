@model IEnumerable<MVC1.Models.Customer>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table class="table-bordered">
            <thead>Customers</thead>
            <tbody>
                @foreach (var customer in @Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name,"Detail",new { id = customer.ID})</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
